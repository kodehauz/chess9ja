
{% include directory ~ '/templates/header.html.twig' %}

  {% if page.breadcrumb %}
    <div class="clearfix banner region--dark-typography region--gray-background region--no-block-paddings region--no-paddings">
      <div class="container-fluid">
        <div class="clearfix breadcrumb__container animated fadeIn" data-animate-effect="fadeIn">
          <div class="row">
            <div class="col-md-12 breadcrumb">
              {{ page.breadcrumb }}
            </div>
          </div>
        </div>
      </div>
    </div>
{% endif %}


  <div id="wrapper">

    {% if page.messages %}
    <div class="vc_row wpb_row  in_container ">
      <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner ">
          <div class="wpb_wrapper">
            {{ page.messages }}
          </div>
        </div>
      </div>
    </div>
     {% endif %}

  <!-- container -->

    <div class="container">
      <div class="clearfix main-content__container">
        <div class="row">
          {%
          set content_classes = [
          page.sidebar_first and page.sidebar_second ? 'col-sm-6',
          page.sidebar_first and page.sidebar_second is empty ? 'col-sm-9',
          page.sidebar_second and page.sidebar_first is empty ? 'col-sm-9',
          page.sidebar_first is empty and page.sidebar_second is empty ? 'col-sm-8 col-sm-offset-1'
          ]
          %}

          {% if page.sidebar_first %}
            <aside class="col-sm-3">
              <section class="sidebar__section sidebar-first clearfix">
                {{ page.sidebar_first }}
              </section>
            </aside>
          {% endif %}

          <section{{ content_attributes.addClass(content_classes) }}>
            {% if page.content %}
            <div class="clearfix main-content__section">
                {{ page.status_message }}
                {{ page.content }}
              {% endif %}
            </div>
          </section>

          {% if page.sidebar_second %}
            <aside class="col-md-3">
              <section class="sidebar__section sidebar-second clearfix">
               {{ page.sidebar_second }}
              </section>
            </aside>
          {% endif %}

        </div>
      </div>
    </div>

    {% if page.featured_top %}
      <section id="content-3-3" class="content-block-nopad content-3-3">
        <div class="overlay overlay-blue">
          <div class="container text-center">
            {{ page.featured_top }}
            <div class="col-md-6 col-md-offset-3 text-center">
              <div class="col-md-6">
              </div>
              <div class="col-md-6">
              </div>
            </div>

          </div>
          <!-- /.container -->
        </div>

      </section>
    {% endif %}

  </div>

{% include directory ~ '/templates/footer.html.twig' %}

